(ql:quickload :caveman2-widgets-blog)

(defpackage caveman2-widgets-blog.app
  (:use :cl)
  (:import-from :lack.builder
                :builder)
  (:import-from :ppcre
                :scan
                :regex-replace)
  (:import-from :caveman2-widgets-blog.web
                :*web*)
  (:import-from :caveman2-widgets-blog.config
                :config
                :productionp
                :*static-directory*))
(in-package :caveman2-widgets-blog.app)

(builder
 (:static
  :path (lambda (path)
          (if (ppcre:scan "^(?:/images/|/css/|/js/|/robot\\.txt$|/favicon\\.ico$)" path)
              path
              nil))
  :root *static-directory*)
 (if (productionp)
     nil
     :accesslog)
 (if (getf (config) :error-log)
     `(:backtrace
       :output ,(getf (config) :error-log))
     nil)
 :session
 (if (productionp)
     nil
     (lambda (app)
       (lambda (env)
         (funcall app env))))
 *web*)
